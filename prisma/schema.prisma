datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model DemoRequest {
  id        String    @id @default(cuid())
  fullName  String
  email     String
  phone     String
  company   String
  employees String? // "1-10", "11-50", etc.
  message   String
  date      DateTime? // desired demo date
  createdAt DateTime  @default(now())
}

model ContactMessage {
  id        String   @id @default(cuid())
  fullName  String
  email     String
  phone     String?
  company   String?
  subject   String?
  message   String
  createdAt DateTime @default(now())
}

model User {
  id                    String    @id @default(cuid())
  email                 String    @unique
  name                  String?
  password              String? // if using password auth
  passwordResetToken    String?   @unique
  passwordResetTokenExp DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}
